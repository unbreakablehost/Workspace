package org.basicPrograms;

import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.edge.EdgeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;

public class Ex2 {

	public static void main(String args[]) {

		Ex2 obj = new Ex2();
		obj.initBrowser("ff");
	}

	public void initBrowser(String bName) {

		if (bName.equalsIgnoreCase("ch")) {

			ChromeDriver ChObj = new ChromeDriver();
			ChObj.manage().window().maximize();
		}

		else if (bName.equalsIgnoreCase("edge")) {

			EdgeDriver EdObj = new EdgeDriver();
			EdObj.manage().window().maximize();
		}

		else if (bName.equalsIgnoreCase("ff")) {

			FirefoxDriver FfObj = new FirefoxDriver();
			FfObj.manage().window().maximize();
		}

	}

}
